<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="fontFamily">@font/app_font</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.StatusBarCustom">
        <item name="android:statusBarColor">@color/blue_bg</item>
        <!-- <item name="fontFamily">@font/app_font</item>-->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.StatusBarWhite">
        <item name="android:statusBarColor">@color/white</item>
        <!-- <item name="fontFamily">@font/app_font</item>-->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/blue_bg</item>
        <item name="android:colorControlNormal">@color/color_grey_selectornav</item>
    </style>

</resources>